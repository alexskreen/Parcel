@using Parcel.Models;

<h1>Shipping center!</h1>

@if (Model.Count == 0)
{
    <p>There are no results</p>
}


<ul>
    @foreach (Package package in Model)
    {
    @if (@package.Width == 0)
    {
        <li>This package needs a width value</li>
    }
    else if (@package.Height == 0)
    {
        <li>This package needs a height value</li>
    }
    else if (@package.Weight == 0)
    {
        <li>This package needs a weight value</li>
    }
    else
    {
        <li>Your package going from @package.From going to @package.To will cost you @package.Price to ship</li>
    }
    }
</ul>

<a href= '/packages/new'> Add a new Package</a>